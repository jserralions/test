<div class="page-header">
  <h1>All of our statuses</h1>
</div>

<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.name %></strong>
  <%= status.content %>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at), status %>
    <span class="admin">
      <%= link_to 'Edit this', edit_status_path(status)  %>
      <%= link_to 'Delete', status_path(status), method: :delete,
        data: {confirm: "Are you sure you want to delete this?"}  %>
    </span>
  </div>
</div>
<% end %>
